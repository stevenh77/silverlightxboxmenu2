<StackPanel x:Class="SilverlightXboxMenu.UserProfile"
            x:Name="ProfileStackPanel"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d"
            Orientation="Horizontal"
            HorizontalAlignment="Left">
    <TextBlock x:Name="ProfileNameTextBlock"
                Text="stevieh77"
                Foreground="{StaticResource ForegroundSelectedTextBrush}"
                FontFamily="/SilverlightXboxMenu;component/Fonts/Fonts.zip#Segoe UI"
                FontSize="16" 
                Margin="0,0,10,0"
                VerticalAlignment="Center"/>
    <Viewbox x:Name="ProfileViewBox">
        <Image x:Name="ProfileImage" Source="Images/profile-snapshot.PNG"/>
    </Viewbox>
</StackPanel>